{
    "pluginAlias": "eNetPlatform",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "plugin to connect to your Gira/Jung - Enet IP Gateway",
    "footerDisplay": "@Bas Maaks",
    "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Plugin name",
                "type": "string",
                "required": true,
                "default": "homebridge-2-enet"
            },
            "autodiscover": {
                "title": "Autodiscover gateways",
                "type": "string",
                "description": "autodiscover is optional. If set to false, no broadcast discovery takes place, all gateways need to have the host property set. Default is to autodiscover gateways using broadcasts.",
                "required": true,
                "enum": [
                    "true",
                    "false"
                ]
            },
            "gateways": {
                "type": "array",
                "items": {
                    "title": "Gateway",
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name for the gateway",
                            "type": "string",
                            "description": "identify gateway by its name. You can set this name with the Jung/Gira eNet app. Factory default is Mobile Gate",
                            "required": true
                        },
                        "mac": {
                            "title": "mac adres gateway",
                            "type": "string",
                            "description": "you can specify the mac-address of the gateway, e.g. by running sampe-discovery.js from the homebridge-enet package",
                            "required": true
                        },
                        "host": {
                            "title": "Hostname from the gateway",
                            "type": "string",
                            "format": "hostname",
                            "description": "if you provide a hostname or ip address that is the identification for the gateway",
                            "required": true
                        },
                        "accessories": {
                            "title": "Channels",
                            "type": "array",
                            "items": {
                                "title": "Channel",
                                "type": "object",
                                "properties": {
                                    "channel": {
                                        "title": "NThe eNet channel assigned to the accessory",
                                        "type": "number",
                                        "required": true
                                    },
                                    "name": {
                                        "title": "The HomeKit name of the accessory",
                                        "type": "string",
                                        "required": true
                                    },
                                    "type": {
                                        "title": "Type of accessory.",
                                        "type": "string",
                                        "required": true,
                                        "enum": [
                                            "Light",
                                            "Switch",
                                            "Shutter"
                                        ]
                                    },
                                    "duration": {
                                        "title": "Duration, only for light and switches",
                                        "description": "optional When the accessory is switched on, it will be automatically switched off after duration seconds. Only for Switch and Light accessories",
                                        "type": "string"
                                    },
                                    "dimmable": {
                                        "title": "dimmable, only for light",
                                        "type": "string",
                                        "description":"optional Only for Light accessories",
                                        "enum": [
                                            "true",
                                            "false"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

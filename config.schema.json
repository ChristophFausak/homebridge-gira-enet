{
    "pluginAlias": "eNetPlatform",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "plugin to connect to your Gira/Jung - Enet IP Gateway",
    "footerDisplay": "@Bas Maaks",
    "schema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Plugin name",
                "type": "string",
                "required": true,
                "default": "homebridge-2-enet"
            },
            "autodiscover": {
                "title": "Autodiscover gateways",
                "type": "string",
                "description": "autodiscover is optional. If set to false, no broadcast discovery takes place, all gateways need to have the host property set. Default is to autodiscover gateways using broadcasts."
                "required": true,
                "enum": [
                    "true",
                    "false"
                ]
            },
            "gateways": {
                "type": "array",
                "items": {
                    "title": "Gateway",
                    "type": "object",
                    "properties": {
                        "name": {
                            "title": "Name for the gateway",
                            "type": "string",
                            "required": true
                        },
                        "mac": {
                            "title": "mac adres gateway",
                            "type": "string",
                            "required": true
                        },
                        "host": {
                            "title": "Hostname from the gateway",
                            "type": "string",
                            "format": "hostname",
                            "required": true
                        },
                        "accessories": {
                            "title": "Channels",
                            "type": "array",
                            "items": {
                                "title": "Channel",
                                "type": "object",
                                "properties": {
                                    "channel": {
                                        "title": "Number for the cannel in the Ip Gateway",
                                        "type": "number",
                                        "required": true
                                    },
                                    "name": {
                                        "title": "Name as it appears in Homebridge",
                                        "type": "string",
                                        "required": true
                                    },
                                    "type": {
                                        "title": "Type of accessory.",
                                        "type": "string",
                                        "required": true,
                                        "enum": [
                                            "Light",
                                            "Switch",
                                            "Shutter"
                                        ]
                                    },
                                    "duration": {
                                        "title": "Duration, only for light and switches",
                                        "type": "string"
                                    },
                                    "dimmable": {
                                        "title": "dimmable, only for light",
                                        "type": "string",
                                        "enum": [
                                            "true",
                                            "false"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
